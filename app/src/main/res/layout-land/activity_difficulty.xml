<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <Button
        android:id="@+id/easyButton"
        android:layout_width="246dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="78dp"
        android:layout_weight="0.26"
        android:background="@android:color/holo_blue_dark"
        android:elevation="0dp"
        android:text="@string/Easy"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/normalButton"
        android:layout_width="246dp"
        android:layout_height="100dp"

        android:layout_weight="0.26"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/Normal"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/hardButton"
        android:layout_toEndOf="@+id/easyButton"
        android:layout_marginStart="24dp" />

    <Button
        android:id="@+id/hardButton"
        android:layout_width="246dp"
        android:layout_height="100dp"
        android:layout_weight="0.26"
        android:background="@android:color/holo_blue_dark"
        android:paddingRight="10dp"
        android:text="@string/Hard"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/easyButton"
        android:layout_alignStart="@+id/easyButton" />

    <Button
        android:id="@+id/expertButton"
        android:layout_width="246dp"
        android:layout_height="100dp"
        android:layout_weight="0.26"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/Expert"
        android:textColor="@android:color/background_light"
        android:layout_alignTop="@+id/hardButton"
        android:layout_alignLeft="@+id/normalButton"/>

</RelativeLayout>